<AnimationSetup version="1">
	<Inputs>
		<IntegerState name="Health" min="0" max="100" signalled="0"/>
		<FloatState name="Speed" min="0" max="1000" signalled="0"/>
		<FloatState name="DesiredSpeed" min="0" max="1000" signalled="0"/>
		<FloatState name="Firing" min="0" max="10" signalled="0"/>
		<!--FloatState name="DesiredTurnAngleZ" min="-3.14" max="3.14" signalled="0"/-->
		<FloatState name="ActualTurnAngleZ" signalled="0" priority="1" attachToBlendWeight="1" blendWeightMoveSpeed="0" min="-3.15" max="3.15"/>
		<IntegerState name="MovementDir" min="0" max="3" signalled="0"/>
				
		<KeyState defaultValue="none" name="Signal" priority="15" signalled="1" >
			<Key value="none"/>
			<Key value="scream"/>
			<Key value="damageFront"/>
			<Key value="damageBack"/>
			<Key value="damageLeft"/>
			<Key value="damageRight"/>
			<Key value="stop"/>
			<Key value="fire"/>
			<Key value="throw"/>
			<Key value="throwHuman"/>
		</KeyState>
		  
		<KeyState name="Stance">
			<Key value="stand"/>
			<Key value="prone"/>
		</KeyState>
		
		<KeyState defaultValue="idle" name="Action" priority="101" signalled="0" >
			<Key value="idle"/>
			<Key value="high"/>
		</KeyState>
	</Inputs>

	<States>
		<!-- basic physicalized state -->
		<State id="Alive">
			<SelectWhen>
				<Health min="1" max="100"/>
				<Signal value="none"/>
			</SelectWhen>
		</State>
		
		<!-- basic ragdoll state -->
		<State id="Ragdoll" allowSelect="0">
			<Event onEnter="TurnRagdoll"/>
		</State>
		
		<State animationControlledMovement="1" id="Dead" extend="Ragdoll">
			<SelectWhen>
				<Health value="0"/>
				<Signal value="none"/>
				<Action value="idle"/>
			</SelectWhen>
						
			<AnimationNew play="hunter_death_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
			<AnimationNew play="hunter_death_01" layer="1" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
			<AnimationNew play="hunter_death_01" layer="2" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
			
			<Sound sound="sounds/alien:hunter:death_part1" input="" soundInput="" multiplier="1.0" offset="0" delay="0.0" soundType="2"/>
			<Sound sound="sounds/alien:hunter:death_part2" input="" soundInput="" multiplier="1.0" offset="0" delay="2.10" soundType="2"/>
		</State>
		
		<State animationControlledMovement="1" id="DeadHigh" extend="Ragdoll">
			<SelectWhen>
				<Health value="0"/>
				<Signal value="none"/>
				<Action value="high"/>
			</SelectWhen>
						
			<AnimationNew play="hunter_deathHigh_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
			<AnimationNew play="hunter_deathHigh_01" layer="1" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
			<AnimationNew play="hunter_deathHigh_01" layer="2" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
			
			<Sound sound="sounds/alien:hunter:death_part1" input="" soundInput="" multiplier="1.0" offset="0" delay="0.0" soundType="2"/>
			<Sound sound="sounds/alien:hunter:death_part2" input="" soundInput="" multiplier="1.0" offset="0" delay="2.10" soundType="2"/>
		</State>
							
		<!-- NO WEAPON -->
		<State animationControlledMovement="1" id="Idle" extend="Alive">
			<SelectWhen>
				<DesiredSpeed min="0" max="0.1"/>
				<Signal value="none"/>
			</SelectWhen>
		</State>
		
		<!-- STAND NW -->
		<State animationControlledMovement="1" id="StandIdle" extend="Idle">
			<SelectWhen>
				<Stance value="stand"/>
				<Action value="idle"/>
			</SelectWhen>
												
			<AnimationNew play="_HUNTER_ROTATE_01" layer="0" transitionTime="0.95" repeatLastKey="0" recursive="1" vtimeWarping="1" phaseSyncing="1" startAfter="1"/>
		</State>
		
		<State animationControlledMovement="1" id="StandIdleHigh" extend="Idle" includeInGame="1">
			<SelectWhen>
				<Stance value="stand"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="_HUNTER_ROTATEHIGH_01" layer="0" transitionTime="0.95" repeatLastKey="0" recursive="1" vtimeWarping="1" phaseSyncing="1" startAfter="1"/>
		</State>
		<!-- ============================================== -->
										
		<State animationControlledMovement="1" id="StandMoveForward" extend="Idle" includeInGame="1">
			<SelectWhen>
				<Stance value="stand"/>
				<DesiredSpeed min="0.1" max="1000"/>
				<MovementDir value="0"/>
				<Action value="idle"/>
			</SelectWhen>
				
			<AnimationNew play="_HUNTER_WALK_01" layer="0" transitionTime="0.5" repeatLastKey="1" recursive="1" vtimeWarping="1" phaseSyncing="1" startAfter="0"/>
		</State>
		
		<State animationControlledMovement="1" id="StandMoveForwardHigh" extend="Idle" includeInGame="1">
			<SelectWhen>
				<Stance value="stand"/>
				<DesiredSpeed min="0.1" max="1000"/>
				<MovementDir value="0"/>
				<Action value="high"/>
			</SelectWhen>
				
			<AnimationNew play="_HUNTER_WALKHIGH_01" layer="0" transitionTime="0.5" repeatLastKey="1" recursive="1" vtimeWarping="1" phaseSyncing="1" startAfter="0"/>
		</State>
				
		<State animationControlledMovement="1" id="Screaming" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="scream"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_injuredScream_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
				
			<Sound sound="sounds/alien:hunter:scream" input="" soundInput="" multiplier="1.0" offset="0" delay="0.0"/>
		</State>
		
		<State animationControlledMovement="1" id="ScreamingHigh" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="scream"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_injuredScreamHigh_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
						
			<Sound sound="sounds/alien:hunter:scream" input="" soundInput="" multiplier="1.0" offset="0" delay="0.0"/>
		</State>
				
		<State animationControlledMovement="1" id="WeaponFire" includeInGame="1">
			<SelectWhen>
				<Signal value="fire"/>
				<Action value="idle"/>
			</SelectWhen>
				
			<AnimationNew play="hunter_weaponAttack_MOAC_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="WeaponFireHigh" includeInGame="1">			
			<SelectWhen>
				<Signal value="fire"/>
				<Action value="high"/>
			</SelectWhen>
		
			<AnimationNew play="hunter_weaponAttack_MOACHigh_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="Throw" includeInGame="1">
			<SelectWhen>
				<Signal value="throw"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_throw_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
								
			<Sound sound="Sounds/alien:hunter:leg_grab" input="" soundInput="" multiplier="1.0" offset="0" delay="0.7"/>
			<Sound sound="Sounds/alien:hunter:throw_leg" input="" soundInput="" multiplier="1.0" offset="0" delay="2.8"/>
		</State>
		
		<State animationControlledMovement="1" id="ThrowHigh" includeInGame="1">
			<SelectWhen>
				<Signal value="throw"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_throwHigh_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
								
			<Sound sound="Sounds/alien:hunter:leg_grab" input="" soundInput="" multiplier="1.0" offset="0" delay="0.7"/>
			<Sound sound="Sounds/alien:hunter:throw_leg" input="" soundInput="" multiplier="1.0" offset="0" delay="2.8"/>
		</State>
		
		<State animationControlledMovement="1" id="ThrowHuman" includeInGame="1">
			<SelectWhen>
				<Signal value="throwHuman"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_throwHuman_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
						
			<Sound sound="sounds/alien:hunter:tongue_shot" input="" soundInput="" multiplier="1.0" offset="0" delay="0.0"/>
			<Sound sound="sounds/alien:hunter:tongue_grab" input="" soundInput="" multiplier="1.0" offset="0" delay="0.7"/>
			<Sound sound="sounds/alien:hunter:tongue_move" input="" soundInput="" multiplier="1.0" offset="0" delay="2.9"/>
			<Sound sound="sounds/alien:hunter:tongue_throw" input="" soundInput="" multiplier="1.0" offset="0" delay="5.85"/>
			<Sound sound="sounds/alien:hunter:taunt" input="" soundInput="" multiplier="1.0" offset="0" delay="3.5"/>
		</State>
		
		<State animationControlledMovement="1" id="ThrowHumanHigh" includeInGame="1">
			<SelectWhen>
				<Signal value="throwHuman"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_throwHumanHigh_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
						
			<Sound sound="sounds/alien:hunter:tongue_shot" input="" soundInput="" multiplier="1.0" offset="0" delay="0.0"/>
			<Sound sound="sounds/alien:hunter:tongue_grab" input="" soundInput="" multiplier="1.0" offset="0" delay="0.7"/>
			<Sound sound="sounds/alien:hunter:tongue_move" input="" soundInput="" multiplier="1.0" offset="0" delay="2.9"/>
			<Sound sound="sounds/alien:hunter:tongue_throw" input="" soundInput="" multiplier="1.0" offset="0" delay="5.85"/>
			<Sound sound="sounds/alien:hunter:taunt" input="" soundInput="" multiplier="1.0" offset="0" delay="3.5"/>
		</State>
		
		<!-- ============================================== -->
		<State animationControlledMovement="1" id="DamagedFront" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageFront"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLarge_front_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedFrontHigh" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageFront"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLargeHigh_front_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedBack" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageBack"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLarge_back_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedBackHigh" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageBack"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLargeHigh_back_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedLeft" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageLeft"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLarge_left_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedLeftHigh" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageLeft"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLargeHigh_left_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedRight" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageRight"/>
				<Action value="idle"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLarge_right_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="DamagedRightHigh" extend="Idle" includeInGame="1">
			<SelectWhen>				
				<Signal value="damageRight"/>
				<Action value="high"/>
			</SelectWhen>
			
			<AnimationNew play="hunter_damageLargeHigh_right_01" layer="0" loopAnimation="0" transitionTime="0.25" repeatLastKey="1" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<!-- ============================================== -->
		<State animationControlledMovement="1" id="StopAction" extend="Idle" includeInGame="1">
			<SelectWhen>
				<Signal value="stop"/>
				<Action value="idle"/>
			</SelectWhen>
									
			<AnimationNew play="hunter_idle_01" layer="0" loopAnimation="1" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="StopActionHigh" extend="Idle" includeInGame="1">
			<SelectWhen>
				<Signal value="stop"/>
				<Action value="high"/>
			</SelectWhen>
									
			<AnimationNew play="hunter_idleHigh_01" layer="0" loopAnimation="1" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<!-- ============================================== -->
		<State animationControlledMovement="1" id="IdleHighToIdle" allowSelect="0" includeInGame="1">									
			<AnimationNew play="hunter_highIdleToIdle_01" layer="0" loopAnimation="1" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
		
		<State animationControlledMovement="1" id="IdleToIdleHigh" allowSelect="0" includeInGame="1">
			<AnimationNew play="hunter_idleToHighIdle_01" layer="0" loopAnimation="1" transitionTime="0.25" repeatLastKey="0" recursive="1" vtimeWarping="0" phaseSyncing="0" startAfter="0" stopCurrentAnimation="1"/>
		</State>
	</States>

	<Transitions>
		
		<BiLink from="StandIdle" to="StandMoveForward"/>
		<BiLink from="StandIdle" to="WeaponFire"/>
		<BiLink from="StandIdle" to="Dead"/>
		<BiLink from="StandIdle" to="Screaming"/>
		<BiLink from="StandIdle" to="Throw"/>
		<BiLink from="StandIdle" to="ThrowHuman"/>
		
		<BiLink from="StandIdle" to="DamagedFront"/>
		<BiLink from="StandIdle" to="DamagedBack"/>
		<BiLink from="StandIdle" to="DamagedLeft"/>
		<BiLink from="StandIdle" to="DamagedRight"/>
		
		<!-- -->
				
		<BiLink from="StandIdleHigh" to="StandMoveForwardHigh"/>
		<BiLink from="StandIdleHigh" to="WeaponFireHigh"/>
		<BiLink from="StandIdleHigh" to="DeadHigh"/>
		<BiLink from="StandIdleHigh" to="ScreamingHigh"/>
		<BiLink from="StandIdleHigh" to="ThrowHigh"/>
		<BiLink from="StandIdleHigh" to="ThrowHumanHigh"/>
		
		<BiLink from="StandIdleHigh" to="DamagedFrontHigh"/>
		<BiLink from="StandIdleHigh" to="DamagedBackHigh"/>
		<BiLink from="StandIdleHigh" to="DamagedLeftHigh"/>
		<BiLink from="StandIdleHigh" to="DamagedRightHigh"/>

		<!-- -->
		<Link from="StandIdle" to="IdleToIdleHigh"/>
		<Link from="IdleToIdleHigh" to="StandIdleHigh"/>
		
		<Link from="StandIdleHigh" to="IdleHighToIdle"/>
		<Link from="IdleHighToIdle" to="StandIdle"/>
		
		<BiLink from="StandMoveForward" to="StandMoveForwardHigh"/>
		
	</Transitions>
</AnimationSetup>
