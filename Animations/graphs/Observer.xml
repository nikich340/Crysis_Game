<AnimationSetup version="1">
	<Inputs>
		<IntegerState name="Health" min="0" max="100"/>
		<FloatState name="Speed" min="0" max="1000"/>
		<KeyState name="Stance">
			<Key value="stand"/>
			<Key value="prone"/>
		</KeyState>
	</Inputs>

	<States>
		<!-- basic physicalized state -->
		<State id="Alive">
			<Template name="SimpleAlienAlive"/>
		</State>
		
		<!-- basic ragdoll state -->
		<State id="Ragdoll" allowSelect="0">
			<Template name="SimpleAlienDead"/>
		</State>
							
		<!-- NO WEAPON -->
		<State id="IdleNw" extend="Alive">
			<Template name="SimpleAlienAnimation" animation=""/>
		</State>
		
		<!-- STAND NW -->
		<State id="StandIdleNw" extend="IdleNw">
			<SelectWhen>
				<Stance value="stand"/>
			</SelectWhen>
			
			<Template name="SimpleAlienAnimation" animation="fly_idle_break_01"/>
		</State>
								
		<State id="StandMoveNw" extend="StandIdleNw">
			<SelectWhen>
				<Speed min="0.1" max="1000"/>
			</SelectWhen>
		
			<Template name="SimpleAlienAnimation" animation="fly_forward"/>
		</State>
	</States>

	<Transitions>
		<BiLink from="StandIdleNw" to="StandMoveNw"/>
	</Transitions>
</AnimationSetup>
