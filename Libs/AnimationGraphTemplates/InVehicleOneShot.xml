<AGTemplate name="InVehicleOneShot">
	<Param name="animation" type="string"/>
	<Param name="aim_pose" type="string"/>
	<Param name="seat_Min" type="int"/>
	<Param name="seat_max" type="int"/>

	<Guard>
		<VehicleSeat min="$seat_Min" max="$seat_max"/>
	</Guard>
	
	<ColliderMode mode="Disabled"/>
	<MovementControlMethod horizontal="Entity" vertical="Entity"/>

	<TransitionParamsLayer1
		Structure=""
		TransitionTime="0.4"
		KeyTime="-1"
		LoopAnimation="0"
		RepeatLastKey="1"
		VTimeWarping="0"
		WaitForAnimation="1"
		AllowAnimRestart="1"
		/>

	<AnimationLayer1
		animation1="$animation"
		aimPose="$aim_pose"
		ensureInStack="0"
		stickyOutTime="-1"
		forceLeaveWhenFinished="0"
		/>
</AGTemplate>

