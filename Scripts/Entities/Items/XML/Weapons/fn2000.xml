<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<item name="FN2000" class="Weapon" category="medium" priority="12">
  <params>
    <param name="giveable" value="1"/>
    <param name="selectable" value="1"/>
    <param name="pose" value="rifle"/>
    <param name="mass" value="25"/>
    <param name="two_hand" value="2"/>
    <param name="attachment" value="item_attachment"/>
    <param name="melee_attack_firemode" value="melee"/>
    <param name="raiseable" value="true"/>
    <param name="raise_distance" value="0.80"/>
    <param name="attach_to_back" value="1"/>
    <param name="bone_attachment_01" value="back_item_attachment_01"/>
    <param name="bone_attachment_02" value="back_item_attachment_02"/>
    <param name="display_name" value="@mp_efn2000"/>
  </params>
  <ai_descriptor handler="instant" burstBulletCountMin="1" burstBulletCountMax="15" burstPauseTimeMin="0.8" burstPauseTimeMax="3.5" singleFireTriggerTime="-1"/>
  <ammos>
    <ammo name="bullet" extra="30" amount="30" minAmmo="20"/>
    <ammo name="scargrenade" extra="1" amount="1" accessoryAmmo="1"/>
  </ammos>
  <geometry>
    <firstperson name="objects/weapons/us/fn2000/fn2000.chr" angles="0,0,0" position="0,0,0"/>
    <thirdperson name="objects/weapons/us/fn2000/fn2000_tp.cgf" angles="0,0,0"/>
    <boneAttachments>
      <attachment target="firstperson" name="silencer" bone="silencer"/>
      <attachment target="firstperson" name="muzzle_flash_effect" bone="weapon_therm"/>
      <attachment target="firstperson" name="muzzle_flash_light" bone="weapon_therm"/>
      <attachment target="firstperson" name="grenade_flash_effect" bone="grenade_term"/>
      <attachment target="firstperson" name="grenade_flash_light" bone="grenade_term"/>
    </boneAttachments>
  </geometry>
  <actions>
    <action name="select">
      <animation target="firstperson" name="select_01"/>
      <animation target="owner" name="select"/>
      <sound target="thirdperson" name="sounds/weapons:ay69:select" radius="2"/>
    </action>
    <action name="deselect">
      <animation target="firstperson" name="deselect_%hand%_%suffix%01"/>
      <animation target="owner" name="deselect"/>
      <sound target="firstperson" name="sounds/weapons:smg:deselect" radius="2"/>
      <sound target="thirdperson" name="sounds/weapons:smg:deselect" radius="2"/>
    </action>
    <action name="idle">
      <animation target="firstperson" name="idle_%hand%_%suffix%01" speed="0.7"/>
      <animation target="owner" name="idle"/>
    </action>
    <action name="pickedup">
      <sound target="firstperson" name="Sounds/weapons:weapon_accessories:pickup_weapon_fp" radius="2"/>
      <sound target="thirdperson" name="Sounds/weapons:weapon_accessories:pickup_weapon" radius="2"/>
    </action>
    <action name="fire">
      <animation target="firstperson" name="fire_bullets_%hand%_%suffix%01"/>
      <animation target="owner" name="shoot"/>
      <sound target="firstperson" name="sounds/fn2000:sounds:fire_fp" radius="150" static="1"/>
      <sound target="thirdperson" name="sounds/fn2000:sounds:fire_3rd" radius="150" static="1"/>
    </action>
    <action name="fire_gl">
      <animation target="firstperson" name="fire_grenade_right_01"/>
      <animation target="owner" name="shoot"/>
      <sound target="firstperson" name="sounds/fn2000:sounds:fire_gl_fp" radius="25" static="1"/>
      <sound target="thirdperson" name="sounds/weapons:scar:fire_grenademode" radius="25" static="1"/>
    </action>
    <action name="spin_down">
      <sound target="firstperson" name="Sounds/weapons:ay69:fire_fp_tail%env%" radius="5" static="1"/>
      <sound target="thirdperson" name="Sounds/weapons:ay69:fire_3rd_tail%env%" radius="5" static="1"/>
    </action>
    <action name="fire_silenced">
      <animation target="firstperson" name="fire_bullets_%hand%_%suffix%01"/>
      <animation target="owner" name="shoot"/>
      <sound target="firstperson" name="sounds/fn2000:sounds:fire_silenced_fp" radius="2" static="1"/>
      <sound target="thirdperson" name="sounds/fn2000:sounds:fire_silenced_3rd" radius="2" static="1"/>
    </action>
    <action name="melee">
      <animation target="firstperson" name="melee_01"/>
      <animation target="owner" name="melee"/>
      <!-- <sound target="firstperson" name="sounds/weapons:melee:fire" radius="5" /> -->
      <sound target="thirdperson" name="sounds/weapons:melee:fire" radius="5"/>
    </action>
    <action name="hit">
      <sound target="firstperson" name="sounds/physics:bullet_impact:melee_impact" radius="5"/>
      <sound target="thirdperson" name="sounds/physics:bullet_impact:melee_impact" radius="5"/>
    </action>
    <action name="change_firemode">
      <animation target="firstperson" name="switch_firemode_%hand%_%suffix%01"/>
      <animation target="owner" name="firemode"/>
      <sound target="firstperson" name="sounds/weapons:weapon_accessories:change_firemode" radius="3"/>
      <sound target="thirdperson" name="sounds/weapons:weapon_accessories:change_firemode" radius="3"/>
    </action>
    <action name="change_firemode_zoomed">
      <animation target="firstperson" name="switch_firemode_%hand%_%suffix%01"/>
      <animation target="owner" name="firemode"/>
      <sound target="firstperson" name="sounds/weapons:weapon_accessories:change_firemode" radius="3"/>
      <sound target="thirdperson" name="sounds/weapons:weapon_accessories:change_firemode" radius="3"/>
    </action>
    <action name="reload_chamber_empty">
      <animation target="firstperson" name="reload_chamberfull_01"/>
      <animation target="owner" name="reload"/>
      <!-- <sound target="thirdperson" name="sounds/weapons:smg:reload_chamberempty" radius="5" /> -->
    </action>
    <action name="reload_chamber_full">
      <animation target="firstperson" name="reload_chamberfull_01"/>
      <animation target="owner" name="reload"/>
      <!-- <sound target="thirdperson" name="sounds/weapons:smg:reload_chamberfull" radius="2" /> -->
    </action>
    <action name="reload_gl">
      <animation target="firstperson" name="reload_grenade_right_01"/>
      <animation target="owner" name="reload_gl"/>
      <!-- <sound target="thirdperson" name="sounds/weapons:scar:reload_grenademode" radius="5" /> -->
    </action>
    <action name="empty_clip">
      <!-- <animation target="firstperson" name="fire_bullets_%hand%_%suffix%01" />
			<animation target="owner" name="shoot" /> -->
      <sound target="firstperson" name="Sounds/weapons:ay69:dryfire_fp" radius="2"/>
      <sound target="thirdperson" name="Sounds/weapons:ay69:dryfire" radius="2"/>
    </action>
    <action name="null_fire">
      <sound target="firstperson" name="Sounds/interface:hud:null_fire" radius="2"/>
    </action>
    <action name="zoom_in">
      <animation target="firstperson" name="zoom_in_01" speed="1"/>
    </action>
    <action name="zoom_out">
      <animation target="firstperson" name="zoom_out_01" speed="1"/>
    </action>
    <action name="offhand_on">
      <animation target="firstperson" name="remove_arm_%offhand%_01" speed="1.0"/>
    </action>
    <action name="offhand_off">
      <animation target="firstperson" name="grab_weapon_%offhand%_01" speed="1.5"/>
    </action>
    <action name="enter_modify">
      <animation target="firstperson" name="enter_modify_%hand%_01"/>
      <animation target="ownerloop" name="modify_weapon"/>
    </action>
    <action name="leave_modify">
      <animation target="firstperson" name="leave_modify_%hand%_%suffix%01"/>
      <animation target="ownerloop" name="idle"/>
    </action>
    <action name="raise">
      <animation target="firstperson" name="raise_right_01"/>
    </action>
    <action name="idle_raised">
      <animation target="firstperson" name="idle_raised_right_01"/>
    </action>
    <action name="lower">
      <animation target="firstperson" name="lower_right_01"/>
    </action>
  </actions>
  <layers>
    <layer name="slider_back">
      <animation target="firstperson" name="slider_back_layered_%hand%_01" layerId="4"/>
      <bones>
        <bone name="Slider_Base"/>
        <bone name="Slide_Release_Base"/>
      </bones>
    </layer>
    <layer name="modify_layer">
      <animation target="firstperson" name="modify_layer_%hand%_01" layerId="1"/>
    </layer>
    <layer name="silencer">
      <animation target="firstperson" name="silencer_on_layer_%hand%_01" layerId="2"/>
    </layer>
    <layer name="gl">
      <animation target="firstperson" name="launcher_on_layer_01" layerId="3"/>
    </layer>
  </layers>
  <layers>
    <layer name="scope">
      <animation target="firstperson" name="scope_on_layer_01" layerId="1"/>
    </layer>
    <layer name="modify_layer">
      <animation target="firstperson" name="modify_layer_%hand%_01" layerId="2"/>
    </layer>
    <layer name="flashlight">
      <animation target="firstperson" name="flashlight_on_layer_01" layerId="3"/>
    </layer>
    <layer name="silencer">
      <animation target="firstperson" name="silencer_on_layer_01" layerId="4"/>
    </layer>
    <layer name="lever_layer_1">
      <animation target="firstperson" name="firemode_single_layer_01" layerId="5"/>
    </layer>
    <layer name="lever_layer_2">
      <animation target="firstperson" name="firemode_rapid_layer_01" layerId="6"/>
    </layer>
  </layers>
  <firemodes>
    <firemode type="default">
      <fire>
        <param name="ammo_type" value="bullet"/>
        <param name="rate" value="670"/>
        <param name="damage" value="75"/>
        <param name="reload_time" value="1"/>
        <param name="bullet_chamber" value="1"/>
        <param name="helper_tp" value="weapon_therm"/>
        <param name="clip_size" value="30"/>
        <param name="nearmiss_signal" value="OnNearMiss"/>
      </fire>
      <recoil>
        <param name="max_recoil" value="8"/>
        <param name="attack" value="3.00"/>
        <param name="decay" value="0.30"/>
        <param name="maxx" value="4.00"/>
        <param name="maxy" value="2.5"/>
        <param name="randomness" value="0.1"/>
        <hints>
          <hint x="0.00" y="0.00"/>
          <hint x="0.02" y="0.00"/>
          <hint x="0.15" y="-0.15"/>
          <hint x="0.35" y="-0.25"/>
          <hint x="0.50" y="-0.50"/>
          <hint x="0.85" y="-0.30"/>
          <hint x="1.00" y="-0.45"/>
          <hint x="1.10" y="-0.55"/>
          <hint x="1.20" y="-0.25"/>
          <hint x="1.10" y="-0.20"/>
          <hint x="1.20" y="-0.35"/>
          <hint x="1.10" y="-0.85"/>
        </hints>
      </recoil>
      <spread>
        <param name="min" value="1.0"/>
        <param name="max" value="3.2"/>
        <param name="attack" value="1.00"/>
        <param name="decay" value="0.70"/>
        <param name="speed_m" value="1.15"/>
        <param name="rotation_m" value="0"/>
        <param name="spread_stand_to_crouch_m" value="2"/>
        <param name="spread_to_prone_m" value="8"/>
      </spread>
      <muzzleflash>
        <firstperson effect="muzzleflash.AssaultRifle.SMG" helper="muzzle_flash_effect" light_helper="muzzle_flash_light" light_radius="2" light_time="0.010" light_color="1,1,0.8" light_diffuse_mult="8"/>
        <thirdperson effect="muzzleflash.AssaultRifle.SMG_tp" helper="weapon_therm" light_helper="weapon_therm" light_radius="2.3" light_time="0.010" light_color="1,1,0.8" light_diffuse_mult="8"/>
      </muzzleflash>
      <reject>
        <firstperson effect="weapon_fx.shells.SMG" helper="shells"/>
        <thirdperson effect="weapon_fx.shells.SMG" helper="shells"/>
      </reject>
    </firemode>
    <firemode name="Rapid" type="Automatic">
      <tracer>
        <param name="geometryFP" value="objects/effects/tracer_standard_new.cgf"/>
        <param name="geometry" value="objects/effects/tracer_standard_new.cgf"/>
        <param name="speed" value="100"/>
        <param name="frequency" value="2"/>
        <param name="helper_tp" value="weapon_therm"/>
        <param name="helper_fp" value="weapon_therm"/>
      </tracer>
      <outofammotracer>
        <param name="geometry" value="objects/effects/tracer_standard_new.cgf"/>
        <paran name="speed" value="100"/>
        <param name="frequency" value="2"/>
        <param name="helper_tp" value="weapon_therm"/>
        <param name="helper_fp" value="weapon_therm"/>
      </outofammotracer>
      <fire>
        <param name="autozoom" value="1"/>
        <param name="ooatracer_treshold" value="5"/>
      </fire>
      <rapid>
        <param name="min_speed" value="0.001"/>
        <param name="max_speed" value="0.001"/>
        <param name="acceleration" value="2.35"/>
        <param name="deceleration" value="-3.0"/>
      </rapid>
      <recoil>
        <param name="angular_impulse" value="0.2"/>
        <param name="back_impulse" value="0.2"/>
      </recoil>
    </firemode>
    <firemode name="Single" type="Single">
      <outofammotracer>
        <param name="geometry" value="objects/effects/tracer_standard_new.cgf"/>
        <paran name="speed" value="100"/>
        <param name="frequency" value="2"/>
      </outofammotracer>
      <tracer>
        <param name="geometryFP" value="objects/effects/tracer_standard_new.cgf"/>
        <param name="geometry" value="objects/effects/tracer_standard_new.cgf"/>
        <param name="speed" value="100"/>
        <param name="frequency" value="2"/>
      </tracer>
      <fire>
        <param name="ooatracer_treshold" value="5"/>
        <param name="auto_fire" value="true"/>
      </fire>
    </firemode>
    <firemode name="melee" type="Melee">
      <melee>
        <param name="helper" value="Collision"/>
        <param name="offset" value="0.85"/>
        <param name="damage" value="35"/>
        <param name="impulse" value="80"/>
        <param name="delay" value="0.19"/>
        <param name="duration" value="0.35"/>
      </melee>
      <actions>
        <param name="attack" value="melee"/>
      </actions>
    </firemode>
    <firemode name="GrenadeLauncher" type="Single" enabled="1">
      <fire>
        <param name="ammo_type" value="scargrenade"/>
        <param name="clip_size" value="1"/>
        <param name="max_clips" value="10"/>
        <param name="rate" value="40"/>
        <param name="damage" value="400"/>
        <param name="reload_time" value="2.0"/>
        <param name="bullet_chamber" value="0"/>
        <param name="helper_tp" value="grenade_term"/>
        <param name="aim_helper" value="1"/>
        <param name="distance" value="-1"/>
      </fire>
      <muzzleflash>
        <firstperson effect="muzzleflash.AssaultRifle.grenade" helper="grenade_flash_effect" light_helper="grenade_flash_light"/>
        <thirdperson effect="muzzleflash.AssaultRifle.grenade_tp" helper="grenade_term" light_helper="grenade_term"/>
      </muzzleflash>
      <reject>
        <firstperson effect="" helper=""/>
        <thirdperson effect="" helper=""/>
      </reject>
      <actions>
        <param name="fire" value="fire_gl"/>
        <param name="fire_cock" value="fire_gl"/>
        <param name="reload_chamber_empty" value="reload_gl"/>
        <param name="reload_chamber_full" value="reload_gl"/>
        <param name="reload" value="reload_gl"/>
      </actions>
    </firemode>
  </firemodes>
  <zoommodes>
    --&gt;
    <zoommode name="assaultscope" type="IronSight" enabled="0">
      <zoom>
        <param name="suffix" value="scope_"/>
        <param name="blur_amount" value="1"/>
        <param name="blur_mask" value="textures/weapons/assaultscope_blur.dds"/>
        <param name="dof_mask" value="textures/weapons/assaultscope_blur.dds"/>
        <param name="zoom_in_time" value="0.3"/>
        <param name="zoom_out_time" value="0.3"/>
        <param name="scope_mode" value="1"/>
        <param name="scope_nearFov" value="7"/>
        <param name="scope_offset" value="0,0,0"/>
        <stages>
          <stage value="4"/>
        </stages>
      </zoom>
      <zoomSway>
        <param name="maxX" value="0.005"/>
        <param name="maxY" value="0.006"/>
        <param name="stabilizeTime" value="3.0"/>
        <param name="minScale" value="0.4"/>
        <param name="strengthScale" value="0.6"/>
        <param name="strengthScaleTime" value="0.75"/>
        <param name="crouchScale" value="0.75"/>
        <param name="proneScale" value="0.5"/>
      </zoomSway>
      <spreadMod>
        <param name="max_mod" value="0.1"/>
        <param name="attack_mod" value="1.0"/>
        <param name="decay_mod" value="1.0"/>
        <param name="speed_m_mod" value="0.5"/>
        <param name="min_mod" value="0.0001"/>
        <param name="rotation_m_mod" value="1.5"/>
        <param name="spread_crouch_m_mod" value="0.75"/>
        <param name="spread_prone_m_mod" value="0.5"/>
        <param name="spread_jump_m_mod" value="1.0"/>
      </spreadMod>
      <recoilMod>
        <param name="max_recoil_mod" value="0.5"/>
        <param name="attack_mod" value="0.4"/>
        <param name="decay_mod" value="1.25"/>
        <param name="impulse_mod" value="1.0"/>
        <param name="maxx_mod" value="0.5"/>
        <param name="maxy_mod" value="1.0"/>
        <param name="angular_impulse_mod" value="1.0"/>
        <param name="back_impulse_mod" value="1.0"/>
        <param name="recoil_crouch_m_mod" value="0.75"/>
        <param name="recoil_prone_m_mod" value="0.5"/>
        <param name="recoil_jump_m_mod" value="2.0"/>
        <param name="recoil_strMode_m_mod" value="1.5"/>
      </recoilMod>
    </zoommode>
  </zoommodes>
  <accessories>
    <initialsetup>
      <!-- <accessory name="Silencer" /> -->
      <!-- <accessory name="ExtendedClip" /> -->
      <!-- accessory name="LAMFlashLight" /> -->
    </initialsetup>
    <accessory name="Silencer">
      <attach helper="silencer" layer="silencer"/>
      <detach/>
      <params>
        <firemodes>
          <firemode type="default">
            <fire>
              <param name="damage" value="70"/>
            </fire>
            <muzzleflash>
              <firstperson effect="muzzleflash.AssaultRifle.silenced_smoke" helper="muzzle_flash_effect" time="0.1"/>
              <thirdperson effect="muzzleflash.AssaultRifle.silenced_smoke_tp" helper="weapon_term" time="0.1"/>
            </muzzleflash>
            <actions>
              <param name="fire" value="fire_silenced"/>
              <param name="fire_cock" value="fire_silenced"/>
              <param name="rapid_fire" value="rapid_fire_silenced"/>
              <param name="spin_down" value="spin_down_silenced"/>
            </actions>
          </firemode>
        </firemodes>
      </params>
    </accessory>
    <accessory name="LAMFlashLight">
      <attach helper="attachment_bottom_LAM" layer="flashlight"/>
      <detach/>
    </accessory>
    <accessory name="ExtendedClip">
      <attach helper="magazine" layer=""/>
      <detach/>
      <params>
        <firemodes>
          <firemode type="default">
            <fire>
              <param name="clip_size" value="75"/>
            </fire>
          </firemode>
        </firemodes>
      </params>
    </accessory>
  </accessories>
</item>
