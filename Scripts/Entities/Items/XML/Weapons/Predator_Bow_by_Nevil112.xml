<item name="Predator_Bow" class="Weapon" category="small" priority="0"  >
	<params>
		<param name="giveable" 		value="1" />
		<param name="selectable" 	value="1" />
		<param name="pose" 				value="rifle" />
		<param name="mass"				value="13" />
		<param name="melee_attack_firemode"		value="melee" />
		<param name="display_name"	value="@mp_eBow" />
		<param name="prone_not_usable" value="1" />
		<param name="two_hand"				value="1" />
	</params>
	<ai_descriptor handler="instant" draw_time="2" burstBulletCountMin="5" burstBulletCountMax="9" 
  burstPauseTimeMin="0.4" burstPauseTimeMax="0.9" singleFireTriggerTime="-1" pressureMultiplier="1"/>
	<ammos>
		<ammo name="StickyArrow" extra="18" amount="9" />
	</ammos>
	<geometry>
		<firstperson name="objects/weapons/us/Predator_Bow/bow_fp.chr" angles="0,0,0" position="0,0,0" />
		<thirdperson name="objects/weapons/us/Predator_Bow/bow_tp.cgf" angles=""/>
		<boneAttachments>
			<attachment target="firstperson" name="magazine" bone="magazine_attachment" />
			<attachment target="firstperson" name="weapon_term" bone="magazine_attachment" />
		</boneAttachments>
	</geometry>
	<actions>
	
		<action name="select" children="1">
			<animation target="firstperson" name="select_01" speed="1.3" />
			<animation target="owner" name="select" />
		</action>
		
		<action name="idle" children="1">
			<!--<animation target="firstperson" name="idle_%hand%_%suffix%01" speed="0.7"/>
			<animation target="owner" name="idle" />-->
		</action>
	
		<action name="pickedup">
			<sound target="firstperson" name="Sounds/weapons:weapon_accessories:pickup_weapon_fp" radius="5" />
			<sound target="thirdperson" name="Sounds/weapons:weapon_accessories:pickup_weapon" radius="5" />
		</action>
		
		<action name="pull" children="1">
			<animation target="firstperson" name="fireload_01" />
			<animation target="owner" name="pull" />
		</action>
		
		<action name="hold">
			<animation target="firstperson" name="" />
			<animation target="ownerloop" name="hold" />
		</action>

		<action name="fire" children="1">
			<animation target="firstperson" name="firerelease_01" speed="1.5" />
			<animation target="owner" name="fire" />
		</action>

		<action name="empty_clip">
			<sound target="firstperson" name="Sounds/weapons:scar:dryfire_fp" radius="2" />
			<sound target="thirdperson" name="Sounds/weapons:scar:dryfire" radius="2" />
		</action>

		<action name="enter_modify">
			<animation target="firstperson" name="enter_modify_%hand%_01" speed="2.05" />
		<animation target="ownerloop" name="modify_weapon" />
		</action>
	
		<action name="leave_modify">
			<animation target="firstperson" name="leave_modify_%hand%_01" speed="2.25" />
		<animation target="ownerloop" name="idle" />
		</action>

		<action name="melee">
			<animation target="firstperson" name="melee_01" />
			<animation target="owner" name="melee" />
		</action>
		
		<action name="hit">
			<sound target="firstperson" name="sounds/physics:bullet_impact:melee_impact_mw" radius="5" />
			<sound target="thirdperson" name="sounds/physics:bullet_impact:melee_impact_mw" radius="5" />
		</action>
		
		<!--<action name="offhand_on">
			<animation target="firstperson" name="remove_arm_%offhand%_01" speed="1.5"/>
		</action>
		
		<action name="offhand_off">
			<animation target="firstperson" name="grab_weapon_%offhand%_01" />
		</action>-->
		
	</actions>

	<firemodes>
		<firemode type="default">
			<fire>
				<param name="ammo_type" value="StickyArrow" />
				<param name="hit_type" value="ht_Bullet" />
				<param name="rate" value="700" />
				<param name="damage" value="250" />
				<param name="bullet_chamber" value="0" />
				<param name="clip_size" value="9" />
				<param name="helper_tp" value="weapon_term" />
				<param name="nearmiss_signal" value="OnNearMiss" />
				<param name="autozoom" value="true" />
				<param name="secondary_damage" value="1" />
				<param name="damage_drop_per_meter" value="0.15" />
				<param name="damage_drop_min_distance" value="30" />
				<param name="ai_vs_player_damage" value="100" />
			</fire>
			<recoil>
				<param name="max_recoil" value="1"/>
				<param name="attack" value="0.9"/>
				<param name="decay" value="1.0"/>
				<param name="end_decay" value="0.5"/>
				<param name="maxx" value="2"/>
				<param name="maxy" value="4"/>
				<param name="randomness" value="0.1"/>
				<hints>
					<hint x="0" y="-0.3"/>
				</hints>
			</recoil>
			<spread>
				<param name="min" value="0.1"/>
				<param name="max" value="1.25"/>
				<param name="attack" value="8.0"/>
				<param name="decay" value="0.8"/>
				<param name="end_decay" value="0.3"/>
				<param name="speed_m" value="1.25"/>
				<param name="rotation_m" value="0.0"/>				
			</spread>	
			<throw>
				<param name="throw_delay" value="0"/>
				<param name="prime_delay" value="-1"/>
			</throw>
			<actions>
				<param name="prime" value="prime"/>
				<param name="hold" value="hold"/>
				<param name="throw" value="throw"/>
			</actions>			
		</firemode>
		
		<firemode type="Throw" name="Bow">
		</firemode>
		
		<firemode name="melee" type="Melee">
			<melee>
				<param name="helper" value="collision" />
				<param name="offset" value="0.35" />
				<param name="damage" value="300" />
				<param name="impulse" value="80" />
				<param name="delay" value="0.10" />
				<param name="duration" value="0.45" />
			</melee>
			<actions>
				<param name="attack" value="melee" />
			</actions>
		</firemode>
	</firemodes>
	
		<zoommodes>
		<zoommode name="ironsight" type="IronSight">
			<zoom>
				<param name="dof_mask" value="textures/weapons/ironzoom_blurmask.dds" />
				<param name="alternate_dof_mask" value="textures/weapons/socom_dof.dds" />
				<param name="zoom_in_time" value="0.3" />
				<param name="zoom_out_time" value="0.5" />
				<param name="scope_mode" value="1" />
				<param name="scope_nearFov" value="35" />
				<stages>
					<stage value="2" />
				</stages>
			</zoom>
			<zoomSway>
				<param name="maxX" value="0.012" />
				<param name="maxY" value="0.015" />
				<param name="stabilizeTime" value="1.0"/>
				<param name="minScale" value="0.5"/>
				<param name="strengthScale" value="0.66"/>
				<param name="strengthScaleTime" value="0.66"/>
				<param name="crouchScale" value="0.66"/>
				<param name="proneScale" value="0.66"/>
			</zoomSway>
		</zoommode>
	</zoommodes>

	<accessories>
		<initialsetup>
			<accessory name="StickArrowMode" />
		</initialsetup>
		
	<accessory name="StickArrowMode">
      <attach helper="magazine" layer=""/>
      <detach/>
    </accessory>
	
	</accessories>
</item>
