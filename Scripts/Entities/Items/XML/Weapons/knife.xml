<item name="Knife" class="Weapon" category="medium" priority="2">
	<params>
		<param name="giveable" 		value="1" />
		<param name="selectable" 	value="1" />
		<param name="pose" 				value="nw" />
		<param name="mass"				value="5" />
		<param name="melee_attack_firemode"	value="melee" />
	</params>
	<geometry>
		<firstperson name="Objects\Weapons\Stalker\knife/knife.chr" angles="0,0,0" position="0,0,0" />
		<thirdperson name="Objects\Weapons\Stalker\knife/knife_tp.cgf" angles="0,0,0"/>
	</geometry>
	<actions>
		<action name="select">
			<animation target="firstperson" name="select_01" />
			<animation target="owner" name="select" />

			<sound target="firstperson" name="" radius="2" />
			<sound target="thirdperson" name="" radius="2" />
		</action>
		<action name="deselect">
			<animation target="firstperson" name="deselect_01" blendTime=".5" />
			<animation target="owner" name="deselect" />
		</action>
		<action name="idle">
			<animation target="firstperson" name="idle_right_01" />
			<animation target="owner" name="idle" />
    		</action>
		<action name="punch">
			<animation target="firstperson" name="impact_01" camera_helper="camera_helper" />
			<animation target="owner" name="melee_punch_left" />
      			<sound target="firstperson" name="" radius="7" static="0" />-->
			<sound target="thirdperson" name="" radius="7" static="0" />
		</action>
		<action name="melee">
			<animation target="firstperson" name="impact_02" camera_helper="camera_helper" />
			<animation target="owner" name="melee_punch_left" />
			<sound target="firstperson" name="" radius="7" static="0" />-->
			<sound target="thirdperson" name="" radius="7" static="0" />
		</action>
		<action name="hit">
			<sound target="firstperson" name="Game/sounds/weapons/knife:knife:collide" radius="5" />
			<sound target="thirdperson" name="Game/sounds/weapons/knife:knife:collide" radius="5" />
		</action>
		<action name="offhand_on">
			<animation target="firstperson" name="remove_%offhand%_01" speed="4.0" />
		</action>
		<action name="offhand_off">
			<animation target="firstperson" name="select_%offhand%_01" />
		</action>
	</actions>
	<firemodes>
		<firemode name="punch" type="Melee">
			<melee>
				<param name="helper" value="Collision" />
				<param name="damage" value="180" />
				<param name="impulse" value="40" />
				<param name="delay" value="0.3" />
				<param name="rate" value="300" />
				<param name="duration" value="2" />
			</melee>
			<actions>
				<param name="attack" value="punch" />
			</actions>
		</firemode>
		<firemode name="melee" type="Melee">
			<melee>
				<param name="helper" value="collision" />
				<param name="damage" value="200" />
				<param name="impulse" value="65" />
				<param name="delay" value="0.4" />
				<param name="duration" value="0.45" />
			</melee>
			<actions>
				<param name="attack" value="melee" />
			</actions>
		</firemode>
	</firemodes>
	<zoommodes>
	</zoommodes>
</item>