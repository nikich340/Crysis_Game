    <param name="raise_distance" value="0.85" />
    <param name="attach_to_back" value="1" />
    <param name="bone_attachment_01" value="back_item_attachment_01" />
    <param name="bone_attachment_02" value="back_item_attachment_02" />
    <dualwield>
      <suffix value="akimbo_" />
    </dualwield>
  </params>
  <ai_descriptor handler="instant" burstBulletCountMin="1" burstBulletCountMax="3" draw_time="2.0" sweep_width="4.0" sweep_frequency="0.4" coverFireTime="4" spreadRadius="0.35" burstPauseTimeMin="0.25" burstPauseTimeMax="0.5" singleFireTriggerTime="1.25" />
  <ammos>
    <ammo name="shoulder_maccuavittleammo" extra="25" amount="25" minAmmo="5" />
