          <hint x="1.0" y="1.0" />
        </hints>
      </recoil>
      <!--<spread>
				<param name="min" value="3.0" />
				<param name="max" value="6.25" />
				<param name="attack" value="0.95" />
				<param name="decay" value="0.7" />
			</spread>-->
      <actions>
        <param name="fire_cock" value="fire_cock" />
      </actions>
      <muzzleflash>
        <firstperson effect="muzzleflash.SniperRifle.Sniper" time="1" helper="muzzle_flash_effect" light_helper="weapon_term" light_radius="2" light_color="0.5,0.5,1" light_diffuse_mult="8" />
        <thirdperson effect="muzzleflash.SniperRifle.Sniper_tp" time="1" helper="weapon_term" light_helper="weapon_term" light_radius="2.3" light_color="0.5,0.5,1" light_diffuse_mult="8" />
      </muzzleflash>
      <muzzlesmoke_ice>
        <firstperson effect="weapon_fx.gun.cold_steam_on_barrel_single" helper="weapon_term" />
        <thirdperson effect="weapon_fx.gun.cold_steam_on_barrel_single" helper="weapon_term" />
      </muzzlesmoke_ice>
      <tracer>
        <param name="geometryFP" value="objects/effects/tracer_standard_new.cgf" />
        <param name="geometry" value="objects/effects/tracer_standard_new.cgf" />
        <param name="effectFP" value="weapon_fx.tracer.sniperfp" />
        <param name="effect" value="weapon_fx.tracer.sniper" />
        <param name="speed" value="800" />
        <param name="speedFP" value="1200" />
        <param name="frequency" value="1" />
        <param name="helper_tp" value="weapon_term" />
        <param name="helper_fp" value="weapon_term" />
      </tracer>
      <reject>
        <firstperson effect="" helper="shells" />
        <thirdperson effect="" helper="shells" />
      </reject>
    </firemode>
