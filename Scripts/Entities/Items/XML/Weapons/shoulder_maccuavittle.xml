      </fire>
      <recoil>
        <param name="max_recoil" value="12.0" />
        <param name="attack" value="5.0" />
        <param name="decay" value="0.50" />
        <param name="maxx" value="40.0" />
        <param name="maxy" value="6.0" />
        <param name="randomness" value="0.3" />
